<h1>Discover Movies</h1>

<%= button_to 'Top Rated Movies', user_movies_path(@user), method: :get, data: { turbo: false } %>

<%= form_with url: user_movies_path, method: :get, local: true do |form| %>
  <%= form.label :query, 'Search', require: true %>
  <%= form.text_field :query %>
  <%= form.submit 'Search' %>
<% end %>